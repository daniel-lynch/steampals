<!DOCTYPE html>
<html>

<head>
    <title>Index</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <nav class="nav">
            <ul class="nav">
                <li class="nav-item my-auto">
                    <a class="nav-link">Hello <%- user[0].personaname %></a>
                </li>
            </ul>
            <ul class="nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <form action="/auth/logout" method="post"><input type="submit" class="btn btn-primary" value="Log Out" /></form>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="row">
        <% for(friend of friends) { %>
            <section class="col-lg-5">
                    <div class="py-3">
                      <div class="card bgdark">
                        <div class="row">
                          <div>
                              <img src="<%= friend.avatarfull %>" alt="" height="100" width="130" style="max-width: 130px;margin: 10px 10px 10px 30px">
                            </div>
                            <div>
                              <div class="card-block">
                                <p class="carbon-text personanamegreen mt-2"><%= friend.personaname %></p>
                                <% if (friend.gameextrainfo) { %><p class="carbon-poweredby">Playing: <%= friend.gameextrainfo %></p><% } %>
                                <% if (friend.personastate == 0) { %><p class="carbon-poweredby"> Offline </p><% } %>
                                <% if (friend.personastate == 1) { %><p class="carbon-poweredby"> Online </p><% } %>
                                <% if (friend.personastate == 2) { %><p class="carbon-poweredby"> Busy </p><% } %>
                                <% if (friend.personastate == 3) { %><p class="carbon-poweredby"> Away </p><% } %>
                                <% if (friend.personastate == 4) { %><p class="carbon-poweredby"> Snooze </p><% } %>
                                <% if (friend.personastate == 5) { %><p class="carbon-poweredby"> Looking to Trade </p><% } %>
                                <% if (friend.personastate == 6) { %><p class="carbon-poweredby"> Looking to Play </p><% } %>
                              </div>
                            </div>                      
                          </div>
                        </div>
                      </div>
                  </section>
        <% }; %>
        </div>
    </div>
    </h1>

</body>

</html>